<% comments.each do |comment| %>
  <div class="flex justify-center my-8">
    <div class="relative border-2 border-white rounded-lg p-2 px-4 inline-block bg-gray-950 w-full md:w-4/5 lg:w-2/5">
      <span class="absolute -top-3 left-2 bg-gray-950 text-yellow-400 text-4xl font-bold px-2 leading-none hover:text-lime-800 hover:no-underline">
        <%= link_to "#{comment.user.name}", user_path(id: comment.user.id) %>
      </span>
      <div class="text-center">
        <p class="text-white text-lg my-6"><%= comment.body %></p>
        <p class="text-gray-300 text-sm my-4">投稿日時：<%= comment.created_at.in_time_zone.to_date %></p>
      </div>
    </div>
  </div>
<% end %>