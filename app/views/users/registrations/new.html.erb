<div class="flex justify-center my-8">
  <div class="rounded-lg border-sloid border-white border-4 bg-gray-950 w-2/5 min-w-min">
    <div class="items-center text-center">
      <h2 class="text-white text-6xl mt-6">はじめから</h2>

      <%= form_with model: @user, url: registration_path(resource_name) do |f| %>
      <%= render "users/shared/error_messages", resource: resource %>

        <div class="field mt-6">
          <div class="mb-4">
          <%= f.label :email, "メールアドレス", class: "text-white text-2xl" %><br />
          </div>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input input-bordered input-accent h-12 w-80 max-w-xs" %>
        </div>

  <div class="field mt-6">
    <div class="mb-4">
      <%= f.label :password, "復活の呪文", class: "text-white text-2xl" %>
    <% if @minimum_password_length %>
      <em class="text-white">(<%= @minimum_password_length %>文字以上)</em>
    <% end %><br />
    </div>
    <%= f.password_field :password, autocomplete: "new-password",
      class: "input input-bordered input-accent h-12 w-80 max-w-xs" %>
  </div>

  <div class="field mt-6">
    <div class="mb-4">
    <%= f.label :password_confirmation %>
    </div>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>
</div>
</div>
</div>

<%= render "users/shared/links" %>
