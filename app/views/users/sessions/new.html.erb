<div class="flex justify-center text-center my-8">
  <div class="nes-container is-dark w-2/5 min-w-min">
    <h2 class="text-5xl m-4">つづきから</h2>
      <%= form_with model: @user, url: session_path(resource_name) do |f| %>
    <div class="field">
    <%= f.label :email, "メールアドレス", class: "text-2xl" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "nes-field nes-input is-dark" %>
  </div>

  <div class="field my-6">
    <%= f.label :password, "復活の呪文", class: "text-2xl" %>
    <%= f.password_field :password, autocomplete: "current-password", class: "nes-field nes-input is-dark" %>
  </div>

  <div class="actions my-4">
    <%= f.submit "スタート",
      class: "bg-blue-950 text-blue-400 border border-blue-400 border-b-4 font-medium relative w-40 px-4 py-2 rounded-md hover:brightness-150" %>
  </div>
<% end %>
</div>
</div>

<%= render "users/shared/links" %>
