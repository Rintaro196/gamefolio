<div class="text-center">
  <%- if controller_name != 'sessions' %>
    <div class="my-6">
      <%= link_to "つづきから", new_session_path(resource_name), class: "text-white text-2xl hover:text-green-300 hover:no-underline" %>
    </div>
  <% end %>

  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <div class="mb-4">
      <%= link_to "はじめから", new_registration_path(resource_name), class: "text-white text-2xl hover:text-green-300 hover:no-underline" %>
    </div>
  <% end %>

  <div class="mt-12">
    <%= link_to "利用規約", rule_path, class: "text-white text-2xl hover:text-green-300 hover:no-underline" %>
  </div>

  <div class="mt-2 mb-6">
    <%= link_to "プライバシーポリシー", policy_path, class: "text-white text-2xl hover:text-green-300 hover:no-underline" %>
  </div>
</div>
