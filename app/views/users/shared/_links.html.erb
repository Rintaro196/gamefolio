<div class="text-center">
<%- if controller_name != 'sessions' %>
<div class="my-4">
  <%= link_to "つづきから", new_session_path(resource_name), class: "text-white hover:text-green-300 hover:no-underline" %>
  </div>
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
<div class="mb-4">
  <%= link_to "はじめから", new_registration_path(resource_name), class: "text-white hover:text-green-300 hover:no-underline" %>
</div>
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
<div class="mb-4">
  <%= link_to "復活の呪文を忘れた", new_password_path(resource_name), class: "text-white hover:text-green-300 hover:no-underline" %>
</div>
<% end %>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
<div class="mb-4">
  <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class: "text-white hover:text-green-300 hover:no-underline" %>
</div>
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
<div class="mb-4">
  <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name), class: "text-white hover:text-green-300 hover:no-underline" %>
</div>
<% end %>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= button_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), data: { turbo: false }, class: "text-white hover:text-green-300 hover:no-underline" %><br />
  <% end %>
<% end %>
</div>
