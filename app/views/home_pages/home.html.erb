<div class="flex justify-center my-8">
  <div class="rounded-lg border-sloid border-white border-4 bg-gray-950 w-3/5 min-w-min">
    <div class="flex justify-center">
      <%= image_tag 'gf_logo.png', width: '150', height: '150' %>
    </div>
    <h1 class="text-lime-400 text-center text-6xl md:text-9xl font-medium">GAMEFOLIO</h1>
    <p class="text-white text-center text-3xl">ゲーム × ポートフォリオ × SNS</p>
    <% if user_signed_in? %>
    <div class="text-center mt-10">
      <%= link_to user_path(id: current_user.id) do %>
        <button class="bg-blue-950 text-blue-400 text-2xl border border-blue-400 border-b-4 font-medium relative px-4 py-2 rounded-md hover:brightness-150">
          プロフィール</button>
      <% end %>
    </div>
    <div class="text-center my-5">
      <%= link_to destroy_user_session_path, data: { turbo_method: :delete } do %>
        <button class="bg-rose-950 text-2xl text-rose-400 border border-rose-400 border-b-4 font-medium relative px-4 py-2 rounded-md hover:brightness-150">
          ログアウト</button>
      <% end %>
    </div>
    <% else %>
    <div class="text-center mt-10">
      <%= link_to new_user_session_path do %>
        <button class="bg-blue-950 text-blue-400 text-2xl border border-blue-400 border-b-4 font-medium relative px-4 py-2 rounded-md hover:brightness-150">
          つづきから</button>
      <% end %>
    </div>
    <div class="text-center my-5">
      <%= link_to new_user_registration_path do %>
        <button class="bg-blue-950 text-2xl text-blue-400 border border-blue-400 border-b-4 font-medium relative w-40 px-4 py-2 rounded-md hover:brightness-150">
          はじめから</button>
      <% end %>
    </div>
    <% end %>
  </div>
</div>