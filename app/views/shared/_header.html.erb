<div class="my-4 ml-4 md:ml-24">
  <button id="toggle-sidebar" class="bg-lime-950 text-lime-400 border border-lime-400 border-b-4 font-medium relative h-16 px-4 py-2 rounded-md hover:brightness-150" type="button">
    <p class="text-2xl">メニュー</p>
  </button>
</div>
<% if user_signed_in? %>
  <div class="mr-4 md:mr-40">
      <%= link_to new_game_log_path do %>
        <button class="btn btn-circle btn-outline btn-info">
          <i class="fa-solid fa-plus fa-xl" style="color: #ffffff;"></i>
        </button>
      <% end %>
    <%= link_to "ログアウト", destroy_user_session_path, data: { turbo_method: :delete },
      class: "bg-rose-950 text-2xl text-rose-400 border border-rose-400 border-b-4 font-medium relative h-16 px-4 py-2 rounded-md hover:brightness-150" %>
  </div>
<% else %>
  <div class="mr-4 md:mr-40">
    <%= link_to "ログイン", new_user_session_path,
      class: "bg-lime-950 text-2xl text-lime-400 border border-lime-400 border-b-4 font-medium relative h-16 px-4 py-2 rounded-md hover:brightness-150" %>
  </div>
<% end %>